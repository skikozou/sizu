{
  "functions": {
    "api/index.js": {
      "runtime": "vercel/node@20.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index?path=$1",
      "has": [
        {
          "type": "header", 
          "key": "user-agent",
          "value": "(?i).*curl.*"
        }
      ]
    }
  ]
}
